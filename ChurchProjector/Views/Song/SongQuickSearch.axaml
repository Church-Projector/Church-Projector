<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="using:ChurchProjector.Views.Song"
        mc:Ignorable="d" 
        SizeToContent="Height"
		x:Class="ChurchProjector.Views.Song.SongQuickSearch"
		x:DataType="local:SongQuickSearchViewModel"
		WindowStartupLocation="CenterOwner"
		CanResize="False"
        Icon="/Assets/icon.ico"
		Width="250"
		Title="Liederschnellsuche">
	
	<StackPanel Margin="10" Spacing="10">
		<TextBlock>Shortcut:</TextBlock>
		<TextBox Name="TxtShortcut" Text="{Binding Shortcut}" />
		<TextBlock Text="{Binding MatchedSong}" TextTrimming="CharacterEllipsis" IsVisible="{Binding HasShortcut}" />
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
			<Button IsCancel="True" Command="{Binding CloseDialogCommand}">Schlie√üen</Button>
			<Button IsDefault="True" Command="{Binding OpenSongCommand}" IsEnabled="{Binding HasShortcut}">OK</Button>
		</StackPanel>
	</StackPanel>
</Window>
